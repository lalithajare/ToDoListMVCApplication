<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/card_layout"
        app:cardCornerRadius="@dimen/dimen_size_5"
        app:cardElevation="@dimen/dimen_size_10"
        android:layout_width="match_parent"
        android:layout_marginBottom="@dimen/dimen_size_20"
        android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="vertical"
            android:padding="@dimen/dimen_size_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:id="@+id/txt_event_name"
                    android:text="XXXXXXXX"
                    android:textSize="@dimen/text_size_18"
                    style="@style/TextStyle"/>
            <ImageView
                    android:id="@+id/img_explore"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:rotation="90"
                    android:src="@android:drawable/arrow_up_float"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

        </RelativeLayout>

        <TextView
                android:id="@+id/txt_event_time"
                android:text="XXXXXXXX"
                android:textSize="@dimen/text_size_8"
                style="@style/TextStyle"/>

        <View android:layout_width="match_parent"
              android:background="@color/grey_shade_01"
              android:layout_height="@dimen/dimen_size_1"/>

        <TextView
                android:layout_toLeftOf="@+id/img_explore"
                android:layout_toStartOf="@+id/img_explore"
                android:id="@+id/txt_event_description"
                android:text="XXXXXXXX"
                android:layout_marginTop="@dimen/dimen_size_10"
                style="@style/TextStyle"/>


    </LinearLayout>
</android.support.v7.widget.CardView>